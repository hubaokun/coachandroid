<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_light_black"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="190dp"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="129dp"
            android:background="@drawable/recharge_bg"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/recharge_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="9dp"
                android:src="@drawable/comment_cancel" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="输入你要充值的金额"
                android:textColor="#d7f0f6"
                android:textSize="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center" >

                <EditText
                    android:paddingLeft="5dp"
                    android:id="@+id/recharge_edit"
                    android:layout_width="128dp"
                    android:layout_height="37dp"
                    android:background="@color/white"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="bottom"
                    android:text="元"
                    android:textColor="#b2d8d3"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#252525" >

            <Button
                android:id="@+id/recharge_btn"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="#f7941d"
                android:text="立即充值"
                android:textColor="@color/white"
                android:textSize="18dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>