<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@color/white"
    android:padding="10dp">
    
    <xiaoba.coach.views.RoundImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_self_eva"
        android:id="@+id/img_my_access_avater"/>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp">
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access_content"
            android:textColor="@color/text_black"
            android:textSize="12sp"/>
			<RatingBar
                android:id="@+id/ratingBar"
                style="@style/myRatingBarSmall"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:layout_marginTop="10dp"
                android:stepSize="0.5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_access_content"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            android:layout_marginTop="5dp"/>
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_grey"
            android:layout_marginTop="10dp"
            />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access_student"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_student_detail">
            <LinearLayout 
                android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            >
           <net.grobas.view.PolygonImageView
            android:id="@+id/img_student_avater"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/portrait_test"
            app:poly_border="false"
            app:poly_rotation_angle="0"
            app:poly_corner_radius="10"
            app:poly_shadow="true"
            app:poly_shadow_color="@color/divider_grey"
            app:poly_vertices="0" />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_access_student_name"
                android:textColor="@color/text_black"
                android:textSize="15sp"
                android:text="11"
                android:layout_gravity="center"/>
            </LinearLayout>
            <ImageView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_grey"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"/>
        </RelativeLayout>
        
        <View android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_grey"
            android:layout_marginTop="10dp"
            />
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/access_time"
            android:textSize="12sp"
            android:textColor="@color/text_black"
            android:layout_marginTop="10dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_access_time"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:text="11"
            android:layout_marginTop="10dp"/>
        
    </LinearLayout>

</LinearLayout>
