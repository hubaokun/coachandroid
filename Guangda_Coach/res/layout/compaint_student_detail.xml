<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/half_light_black"
    >
    <LinearLayout
   	android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_centerInParent="true"  >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/comment_bg">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/comment_cancel"
            android:id="@+id/img_cancel" 
            android:padding="10dp"/>
        
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            
            <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            
        <net.grobas.view.PolygonImageView
            android:id="@+id/student_detail_avater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/portrait_test"
            app:poly_border="false"
            app:poly_rotation_angle="30"
            app:poly_corner_radius="10"
            android:layout_marginBottom="15dp"
            app:poly_shadow="true"
            app:poly_shadow_color="@color/divider_grey"
            app:poly_vertices="6" />
           
           <TextView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25sp"
               android:textColor="@color/white"
               android:id="@+id/tv_student_name"
               android:text="11"/>
           
           <LinearLayout android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="8dp"
               android:layout_marginBottom="25dp"
               android:gravity="center">
               <RatingBar
                android:id="@+id/ratingBar"
                style="@style/myRatingBarSmall"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.5"/>

               
               <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/white"
                   android:textSize="13sp"
                   android:id="@+id/tv_rank"
                   android:layout_marginLeft="5dp"
                   android:text="11"
                   android:layout_gravity="center"
                   />
           </LinearLayout>
           </LinearLayout>
           
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal" >
               
               <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:textColor="@color/white"
                   android:text="@string/student_contact"/>
               
               <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/tv_student_contact"/>
        </LinearLayout>
        
            <LinearLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginTop="5dp">
               
               <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:textColor="@color/white"
                   android:text="@string/student_number"/>
               
               <TextView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16sp"
                   android:textColor="@color/white"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/tv_student_number"/>
               </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>
    <RelativeLayout 
       android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:padding="15dp"
        android:id="@+id/rl_mobil">
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center">
        
        <ImageView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tel_black"
            />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/model"
        android:textSize="20sp"
        android:textColor="@color/text_black"
        android:layout_marginLeft="10dp"/>
    </LinearLayout>
    </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
