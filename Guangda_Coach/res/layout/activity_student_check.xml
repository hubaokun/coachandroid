<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/check_title"
            android:textColor="@color/text_black"
            android:textSize="18dp" />

        <ImageView
            android:id="@+id/img_title_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:src="@drawable/back_arrow"/>
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:layout_alignParentRight="true"
           	android:layout_centerVertical="true"
           	android:text="@string/pick_info"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="14sp"
            android:id="@+id/tv_title_right"
            android:textColor="@color/text_black"/>
    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:paddingTop="16dp"
        android:paddingBottom="20dp"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:background="@color/white"
        >
        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
            
            <RelativeLayout android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/dash_rectangle"
                android:id="@+id/rl_id_zhengmian"
                android:layout_marginTop="4dp">
                
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id_zhengmian"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"/>
                </LinearLayout>
                <ImageView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img_zhengmian"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/rl_id_zhengmian"
                    android:background="@color/red_light"
                    android:layout_marginLeft="-8dp"
                    android:id="@+id/rl_del_id_zhengmian"
                    android:padding="2dp"
                    android:visibility="gone"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_login_black" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RelativeLayout android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/dash_rectangle"
                android:id="@+id/rl_id_fanmian"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="4dp">
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id_fanmian"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"/>
                </LinearLayout>
                <ImageView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img_id_fanmian"/>
            </RelativeLayout>
                        <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/rl_id_fanmian"
                    android:background="@color/red_light"
                    android:layout_marginLeft="-8dp"
                    android:id="@+id/rl_del_id_fanmian"
                    android:padding="2dp"
                    android:visibility="gone"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_login_black" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp">
          <RelativeLayout android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/dash_rectangle"
                android:id="@+id/rl_xueyuanzheng"
                android:layout_marginTop="4dp">
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                <ImageView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"
                    />
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dirver_xueyuan"
                    android:textColor="@color/text_grey"
                    android:textSize="14sp"
                    android:layout_marginTop="15dp"/>
                </LinearLayout>
                <ImageView android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img_xueyuanzhao"/>
            </RelativeLayout>
             <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/rl_xueyuanzheng"
                    android:background="@color/red_light"
                    android:layout_marginLeft="-8dp"
                    android:id="@+id/rl_del_xueyuanzheng"
                    android:padding="2dp"
                    android:visibility="gone"
                   >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/back_login_black" />
                </RelativeLayout>
            </RelativeLayout>
    </LinearLayout>
    
    

</LinearLayout>
