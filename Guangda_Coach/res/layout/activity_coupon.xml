<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/white">
    

    
   <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">

    <include
        layout="@layout/layout_titlebar"
        android:background="#ffffff" />
    </RelativeLayout>
    
   <RelativeLayout android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@color/white">
        <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
    
   <LinearLayout android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:orientation="horizontal"
       android:background="@drawable/shape_light_grey_round"
       android:paddingTop="7dp"
       android:paddingBottom="7dp">
    
     <TextView android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:text="手机号"
         android:textSize="14sp"
         android:textColor="@color/text_black"
         android:layout_gravity="center"
         android:paddingLeft="17dp"/>
       
     <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e5e5e5" 
        android:layout_marginRight="20dp"/>
     
     <RelativeLayout android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:id="@+id/rl_student_name"
       	 android:layout_gravity="center"
         android:gravity="center">
     
     <EditText android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@null"
         android:id="@+id/et_student_name"
         android:textColor="@color/text_black"
         android:textSize="16sp"
         android:textStyle="bold"
         android:layout_centerInParent="true"
         android:gravity="center"
         android:hint="输入学员手机号"
         android:textColorHint="#aaaaaa"
         android:layout_marginRight="20dp"/>
       </RelativeLayout>
   </LinearLayout>
   
   <TextView android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="12dp"
       android:textColor="#fb6311"
       android:layout_marginRight="10dp"
       android:layout_gravity="right"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="5dp"
       android:id="@+id/tv_release_tickets"/>
    
  <LinearLayout android:layout_width="match_parent"
       android:layout_height="40dp"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:orientation="horizontal"
       android:background="@drawable/shape_light_grey_round"
       android:paddingTop="7dp"
       android:paddingBottom="7dp">
    
     <TextView android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:text="发放数量"
         android:textSize="14sp"
         android:textColor="@color/text_black"
         android:layout_gravity="center"
       	 android:paddingLeft="17dp"/>
       
     <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e5e5e5" 
        android:layout_marginRight="20dp"/>
     
     <EditText android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@null"
         android:id="@+id/et_send_count"
         android:textColor="@color/text_black"
         android:textSize="16sp"
         android:textStyle="bold"
         android:layout_gravity="center"
         android:gravity="center"
         android:layout_marginRight="20dp"
         android:inputType="number"/>
       
   </LinearLayout>
   
  <LinearLayout android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginLeft="10dp"
     android:layout_gravity="right"
      android:layout_marginTop="8dp"
      android:layout_marginRight="10dp">
      <ImageView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_tips_coupon"
          android:layout_gravity="center_vertical"/>
      
      <TextView android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="小巴券单次发放数量不超过32张"
          android:layout_marginLeft="9dp"
          android:layout_gravity="center_vertical"
          android:textColor="#aaaaaa"
          android:textSize="12dp"/>
  </LinearLayout>
   
  <Button android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="13dp"
      android:paddingBottom="13dp"
      android:text="确定发放"
      android:textColor="@color/white"
      android:textSize="14dp"
      android:layout_marginTop="27dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:id="@+id/btn_grantcoupon"
      android:background="@drawable/selector_green_round"/>
    </LinearLayout>
    
    <ListView android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none"
        android:id="@+id/lv_student"
        android:visibility="gone"
        android:paddingTop="14dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="14dp"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:background="@drawable/shape_white"/>
</RelativeLayout>
</LinearLayout>
