<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white" 
    android:paddingTop="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
     <net.grobas.view.PolygonImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/complaint_student_avater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_message_portrait"
            app:poly_border="false"
            app:poly_rotation_angle="0"
            app:poly_corner_radius="10"
            app:poly_shadow="true"
            app:poly_shadow_color="@color/divider_grey"
            app:poly_vertices="0" />
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="15sp"
            android:background="@drawable/bg_message_bubble"
            android:id="@+id/tv_notice_content"
            android:text="111"
            android:paddingLeft="23dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"/>
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_notice_time"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>
    

</LinearLayout>
