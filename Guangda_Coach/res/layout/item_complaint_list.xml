<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp" 
    android:background="@color/white">
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_has_solution"
        android:text="@string/has_solution"
        android:background="@drawable/right_half_circly_black"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"/>
       
      <net.grobas.view.PolygonImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/complaint_student_avater"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/portrait_test"
            app:poly_border="false"
            app:poly_rotation_angle="30"
            app:poly_corner_radius="10"
            app:poly_shadow="true"
            app:poly_shadow_color="@color/divider_grey"
            app:poly_vertices="6" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:id="@+id/ll_complaint_content">

         
    </LinearLayout>
    
    <View 
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_grey"
            android:layout_marginTop="10dp"/>
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="任务时间"
            android:textSize="12sp"
            android:layout_marginTop="10dp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:text="11"
            android:id="@+id/tv_complaint_time"
            android:layout_marginBottom="10dp"
            android:textColor="@color/text_black"/>
        </LinearLayout>

</LinearLayout>
