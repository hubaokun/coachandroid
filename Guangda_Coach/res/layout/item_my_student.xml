<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
	<LinearLayout
        android:id="@+id/jo_main_part"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="15dp" >

        <net.grobas.view.PolygonImageView
            android:id="@+id/potrait"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/portrait_test"
            app:poly_border="false"
            app:poly_rotation_angle="30"
            app:poly_corner_radius="10"
            app:poly_shadow="true"
            app:poly_shadow_color="@color/divider_grey"
            app:poly_vertices="6" />
        
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            >
            <RelativeLayout android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_my_student_name"
                android:textColor="@color/text_black"
                android:textSize="18sp"
                android:text="11"/>
             <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/money_count"
            android:textColor="@color/text_green"
            android:textSize="14sp"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          	android:textColor="@color/text_green"
          	android:textSize="14sp"
          	android:id="@+id/tv_money_count"/>
        </LinearLayout>
            </RelativeLayout>
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:text="@string/time_count"/>
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:id="@+id/tv_time_count_in_mine"
                    android:text="11"/>
              <!--   <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"/> -->
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black"
                    android:textSize="14sp"
                    android:id="@+id/tv_time_count"
                    android:text="11"/>
            </LinearLayout>
           
           
        </LinearLayout>
       
        </LinearLayout>
       <ImageView
            android:id="@+id/jo_item_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_grey"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
     <RelativeLayout
        android:id="@+id/hide_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <ImageView
            android:id="@+id/big_portrait"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:src="@drawable/portrait_test" />

        <View
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:background="#bb000000" />

        <LinearLayout
            android:id="@+id/hide_part_up"
            android:layout_width="wrap_content"
            android:layout_height="223dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/jo_tousu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/talk" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/home_message"
                        android:textColor="#b4b4b4"
                        android:textSize="11dp" />
                </LinearLayout>

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="40dp"
                    android:background="#444444" />

                <LinearLayout
                    android:id="@+id/jo_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tel" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="@string/contact"
                        android:textColor="#b4b4b4"
                        android:textSize="11dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="29dp">
                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学员姓名"
                    android:textColor="#b4b4b4"
                android:textSize="12dp"/>
            	<TextView
                android:id="@+id/jo_stuname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b4b4b4"
                android:textSize="12dp"
                android:layout_marginLeft="5dp" />
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="8dp">
            	<TextView android:layout_width="wrap_content"
            	    android:layout_height="wrap_content"
            	    android:text="联系电话"
            	    android:textColor="#b4b4b4"
                android:textSize="12dp"/>
            <TextView
                android:id="@+id/jo_stutel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#b4b4b4"
                android:textSize="12dp" 
                android:layout_marginLeft="5dp"/>
			</LinearLayout>
			<LinearLayout android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:layout_marginTop="8dp">
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学员证号"
                android:textColor="#b4b4b4"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/jo_stucard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="#b4b4b4"
                android:textSize="12dp"
                android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
